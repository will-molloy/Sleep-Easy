<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

style="@android:style/TextAppearance.DeviceDefault.Medium"
android:id="@+id/given_time_layout"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context=".SleepNowActivity">

<TextView
    android:id="@+id/current_time_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textSize="40sp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:text="@string/dummy_wake_up" >
</TextView>


<TextView
    android:id="@+id/wake_up_at_msg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="@string/wake_up_at_one_of_these_times"
    android:textSize="40sp"
    android:layout_below="@+id/current_time_message"
    android:layout_marginTop="30dp"
    android:layout_centerHorizontal="true" >
</TextView>


<TextView
    android:id="@+id/explanation_text_sleep_now"
    android:text="@string/dummy_explanation"
    android:textSize="35sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_below="@+id/wakeup_times"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="40dp">
</TextView>

<TextView
    android:id="@+id/wakeup_times"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/wake_up_at_msg"
    android:layout_marginTop="30dp"
    android:gravity="center"
    android:text="@string/dummy_times"
    android:textSize="40sp">
</TextView>


    <Button
        android:textSize="30sp"
        android:layout_width="210dp"
        android:layout_height="65dp"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:onClick="setAlarm"
        android:background="@drawable/custom_button"
        android:text="@string/set_alarm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp" />

    <Button
        android:textSize="30sp"
        android:layout_width="210dp"
        android:layout_height="65dp"
        android:id="@+id/button"
        android:text="@string/options"
        android:onClick="settings"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"/>


</RelativeLayout>
